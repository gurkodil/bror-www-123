{
    "files.exclude": {
        ".git/": true,
        "node_modules/": false,
        "public/": false
    },
    "search.exclude": {
        "**/.cache": true,
        "**/node_modules": true,
        "**/public": true
    },
    "editor.rulers": [80],
    "editor.formatOnSave": true,
    "prettier.tabWidth": 4,
    "prettier.eslintIntegration": true,
    "prettier.stylelintIntegration": true,
    "eslint.autoFixOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
        {
            "language": "javascript",
            "autoFix": false
        },
        {
            "language": "javascriptreact",
            "autoFix": false
        },
        {
            "language": "typescript",
            "autoFix": false
        },
        {
            "language": "typescriptreact",
            "autoFix": true
        }
    ],
    "tslint.enable": false,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "debug.node.autoAttach": "on"
}
